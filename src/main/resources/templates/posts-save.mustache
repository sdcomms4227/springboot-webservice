{{>layout/header}}

<h1>게시글 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form action="">
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" name="" id="title" class="form-control" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" name="" id="author" class="form-control" placeholder="작성자를 입력하세요">
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea name="" id="content" class="form-control" placeholder="내용을 입력하세요"></textarea>
            </div>
        </form>
        <a href="/" class="btn btn-secondary" role="button">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
</div>

